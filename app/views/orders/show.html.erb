<h2>Order <%= @order.id %> Details</h2>

<div class="row">
  <div class="order_status col m6">
    <h5> Ordered: <%= @order.created_at.strftime("%B %d, %Y") %><br /></h5>
    User's Name: <%= User.find(@order.user_id).username %><br />
    Status: <%= @order.status %><br />
    Updated At: <%= @order.updated_at.strftime("%B %d, %Y") %><br />
    Address: <%= @order.address %><br />
    <div class="order_total">
      Order Total: <%= number_to_currency @order.total_price %>
    </div>
  </div>

  <div class="items_ordered col m6">
    <h5>Items Ordered</h5>
    <% @order.items.each_with_index do |item, i| %>
      <span class="<%=item.slug%>">
        <%= i + 1 %>. <%= item.name %> (<em><%= item.status %></em>)<br />
        <%= link_to "View Item", item_path(item.slug) %><br>
        <% item_order = @order.item_orders.find_by(order_id: @order.id) %><br />
        Number of Items: <%= item_order.quantity %><br />
        Subtotal: <%= number_to_currency item_order.subtotal %><br />
      </span>
      <% end %>
    </div>
</div><br><br>

<h2>Add New Item</h2>

<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :category %>
  <%= select(:item, :category_id, category_arr) %>
  <%= f.label :price %>
  <%= f.text_field :price%>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :store, value: params[:store] %>
  <%= f.submit %>
<% end %>
